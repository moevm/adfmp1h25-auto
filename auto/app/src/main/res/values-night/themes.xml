<resources>
    <!-- Базовая тема приложения -->
    <style name="Theme.TestAuto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Основной цвет (заменяет purple_500) -->
        <item name="colorPrimary">@color/main_color</item>
        <!-- Вариант основного цвета -->
        <item name="colorPrimaryVariant">@color/main_color</item>
        <!-- Вторичный цвет -->
        <item name="colorSecondary">@color/green</item>
        <!-- Вариант вторичного цвета -->
        <item name="colorSecondaryVariant">@color/green</item>
        <!-- Цвет текста/иконок на основном цвете -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Цвет текста/иконок на вторичном цвете -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Фон приложения -->
        <item name="android:colorBackground">@color/black</item>
        <!-- Цвет текста/иконок на фоне -->
        <item name="android:textColor">@color/white</item>
    </style>
</resources>